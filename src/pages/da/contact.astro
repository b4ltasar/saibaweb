---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ContactForm from '../../components/ContactForm.astro';
import GradientGridBackground from '../../components/GradientGridBackground.astro';
---

<BaseLayout title="Kontakt - SAIBA" description="Kontakt SAIBA for AI lÃ¸sninger der transformerer jeres forretning">
  <Header />
  
  <main class="pt-24">
    <!-- Contact Section with Grid Background -->
    <div class="relative overflow-hidden">
      <!-- Subtle Grid Background -->
      <div class="absolute inset-0 opacity-50" style="mask-image: linear-gradient(to bottom, transparent 0%, black 10%, black 90%, transparent 100%);">
        <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
          <defs>
            <pattern id="grid-contact" width="40" height="40" patternUnits="userSpaceOnUse">
              <path d="M 40 0 L 0 0 0 40" fill="none" stroke="rgba(0,0,0,0.15)" stroke-width="1"/>
            </pattern>
          </defs>
          <rect width="100%" height="100%" fill="url(#grid-contact)" />
        </svg>
      </div>
      
      <GradientGridBackground />
      
      <section class="relative z-10">
        <ContactForm />
      </section>
    </div>
  </main>

  <Footer />
</BaseLayout>

