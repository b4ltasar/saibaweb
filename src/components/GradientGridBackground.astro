---
// Gradient Grid Background Component
---

<div class="gradient-grid-bg absolute inset-0 pointer-events-none z-0">
  <div class="absolute inset-0 bg-gradient-to-br from-gray-50 via-white to-gray-100 opacity-60"></div>
  <div class="absolute inset-0 grid-pattern opacity-20"></div>
</div>

<style>
  .grid-pattern {
    background-image: 
      linear-gradient(rgba(0, 0, 0, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0, 0, 0, 0.03) 1px, transparent 1px);
    background-size: 40px 40px;
    animation: gridFloat 20s ease-in-out infinite;
  }

  @keyframes gridFloat {
    0%, 100% {
      transform: translate(0, 0);
      opacity: 0.2;
    }
    25% {
      transform: translate(-10px, -5px);
      opacity: 0.15;
    }
    50% {
      transform: translate(5px, -10px);
      opacity: 0.25;
    }
    75% {
      transform: translate(-5px, 5px);
      opacity: 0.1;
    }
  }

  .gradient-grid-bg {
    background: 
      radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.08) 0%, transparent 50%),
      radial-gradient(circle at 40% 40%, rgba(120, 200, 255, 0.06) 0%, transparent 50%),
      linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(248, 250, 252, 0.8) 100%);
  }
</style>