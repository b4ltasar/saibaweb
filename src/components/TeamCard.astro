---
export interface Props {
  name: string;
  details: string;
  linkedin?: string;
  id: string;
  image: string;
  title?: string;
}

const { name, details, linkedin, id, image, title } = Astro.props;
---

<div class="team-card bg-gray-800 rounded-2xl overflow-hidden transition-all duration-300 hover:bg-gray-700 w-full flex flex-col" data-card-id={id}>
  <!-- Card Content -->
  <div class="p-4 sm:p-6 flex flex-col h-full">
    <!-- Profile Image - Fixed height -->
    <div class="mb-4 sm:mb-6 flex justify-center flex-shrink-0" style="height: 96px;">
      <img 
        src={image}
        alt={name}
        class="w-20 h-20 sm:w-24 sm:h-24 object-cover object-center"
        loading="lazy"
        decoding="async"
        style="background: transparent;"
      />
    </div>
    
    <!-- Name and Title -->
    <div class="mb-3 sm:mb-4 flex-shrink-0 flex flex-col items-center justify-center">
      <h3 class="text-white font-bold text-lg sm:text-xl text-center leading-tight">{name}</h3>
      {title && (
        <p class="text-gray-400 text-xs mt-1 opacity-70">{title}</p>
      )}
    </div>
    
    <!-- Expand Button - Only on mobile -->
    <div class="mb-4 flex justify-center md:hidden">
      <button 
        class="team-expand-btn text-gray-400 hover:text-white transition-all duration-300 p-2"
        data-target={id}
        aria-label={`Vis mere information om ${name}`}
        aria-expanded="false"
      >
        <svg class="team-arrow w-4 h-4 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </button>
    </div>
    
    <!-- Details - Always visible on md+, expandable on mobile only -->
    <div class="team-details text-white text-sm leading-relaxed mb-4 sm:mb-6 flex-grow">
      <p class="hidden md:block">{details}</p>
      <div class="md:hidden overflow-hidden transition-all duration-300" style="max-height: 0px; opacity: 0;" data-details-content={id}>
        <p>{details}</p>
      </div>
    </div>
    
    <!-- LinkedIn Icon - Fixed position at bottom -->
    <div class="flex justify-center flex-shrink-0 h-10 sm:h-12 items-center">
      {linkedin && (
        <a href={linkedin} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transition-colors p-2">
          <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
      )}
    </div>
  </div>
</div>

